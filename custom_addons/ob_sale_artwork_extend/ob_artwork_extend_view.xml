         <record id="view_order_line_image_form_inherited" model="ir.ui.view">
            <field name="name">view.order.line.image.form.inherited</field>
            <field name="model">sale.order.line.images</field>
            <field name="inherit_id" ref="ob_sale_artwork.view_order_line_image_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='history_ids']" position="replace">
                </xpath>
                <xpath expr="//field[@name='description']" position="replace">
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                            <field name="history_ids"/>
                        </page>
                        <page string="Type">
                            <group col="4">
                                <group colspan="2">
                                    <field name="type_ids" widget="many2many_checkboxes" nolabel="1"/>
                                </group>
                                <group colspan="2">
                                    <group col="3">
                                        <field name="other_type_bool"/>
                                        <!--<label string="Other"/>-->

                                        <field name="other_type_val" nolabel="1" attrs="{'invisible':[('other_type_bool','=',False)]}"/>
                                    </group>
                                </group>
                            </group>

                            <!--<field name="other_type_val" attrs="{'invisible':[('other','=',False)]}"/>-->

                        </page>
                        <page string="Shape">
                            <field name="shape_ids" widget="many2many_checkboxes"/>
                        </page>
                        <page string="On Loop">
                            <!--<field name="onloop_ids" widget="many2many_checkboxes"/>-->
                            <group col="4">
                                <group colspan="2">
                                    <field name="onloop_ids" widget="many2many_checkboxes" nolabel="1"/>
                                </group>
                                <group colspan="2">
                                    <group col="3">
                                        <field name="other_onloop_bool"/>
                                        <field name="other_onloop_val" nolabel="1" attrs="{'invisible':[('other_onloop_bool','=',False)]}"/>
                                    </group>
                                </group>
                            </group>
                        </page>
                        <page string="Attachment">

                            <!--<field name="attachment_ids" widget="many2many_checkboxes"/>-->
                            <group col="4">
                                <group colspan="2">
                                    <field name="attachment_ids" widget="many2many_checkboxes" nolabel="1"/>
                                </group>
                                <group colspan="2">
                                    <group col="3">

                                        <field name="solid_attachment_bool"/>
                                        <field name="solid_attachment_val" nolabel="1" attrs="{'invisible':[('solid_attachment_bool','=',False)]}"/>
                                        <field name="deluxe_attachment_bool"/>
                                        <field name="deluxe_attachment_val" nolabel="1" attrs="{'invisible':[('deluxe_attachment_bool','=',False)]}"/>
                                        <field name="blade_attachment_bool"/>
                                        <field name="blade_attachment_val" nolabel="1" attrs="{'invisible':[('blade_attachment_bool','=',False)]}"/>
                                        <field name="other_attachment_bool"/>
                                        <field name="other_attachment_val" nolabel="1" attrs="{'invisible':[('other_attachment_bool','=',False)]}"/>
                                    </group>
                                </group>
                            </group>

                        </page>
                        <page string="2D/3D">
                            <field name="dim_ids" widget="many2many_checkboxes"/>
                        </page>
                        <page string="Platting">
                            <!--<field name="platting_ids" widget="many2many_checkboxes"/>-->
                            <group col="4">
                                <group colspan="2">
                                    <field name="platting_ids" widget="many2many_checkboxes" nolabel="1"/>
                                </group>
                                <group colspan="2">
                                    <group col="3">
                                        <field name="other_platting_bool"/>
                                        <field name="other_platting_val" nolabel="1" attrs="{'invisible':[('other_platting_bool','=',False)]}"/>
                                    </group>
                                </group>
                            </group>
                        </page>
                        <page string="Decoration">
                            <field name="decoration_ids" widget="many2many_checkboxes"/>
                            <group>
                                <field name="location_ids" widget="many2many_tags"/>
                                <field name="imprint_color_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>

